- content_for :title, 'Log In'

.container
  .row
    .col-md-6.col-sm-12.image_pack
      = image_pack_tag 'Login.jpg', height: 382
    .col-md-6.col-sm-12
      %h2 Login
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f|
        .form-inputs
          = f.input :email, required: false, autofocus: true, label_html: { class: 'control-label' }
          = f.input :password, required: false, label_html: { class: 'control-label' }
        .form-actions
          = f.button :submit, 'Log in', class: 'btn btn-primary'
          = render "devise/shared/links"

