.row.justify-content-center
  .col-sm-8.col-lg-6
    .card
      .card-header
        Club details
      .card-body
        %dl.row.mb-0
          %dt.col-md-3 Club:
          %dd.col-md-9= @userinfo.club
          %dt.col-md-3 Height:
          %dd.col-md-9= @userinfo.height
          %dt.col-md-3 Width:
          %dd.col-md-9= @userinfo.width
          %dt.col-md-3 Angle:
          %dd.col-md-9= @userinfo.angle
      .card-footer.d-flex
        = link_to 'Edit', edit_userinfo_path(@userinfo), class: 'btn btn-link'
        = link_to 'Back', userinfos_path, class: 'btn btn-link ms-auto'