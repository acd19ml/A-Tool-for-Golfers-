-# frozen_string_literal: true
= simple_form_for(@user) do |f|
  .card-body
    = f.input :email, wrapper_html: { readonly: true }
    = f.input :map_creator, wrapper_html: { class: 'mb-3' }
    = f.input :admin, wrapper_html: { class: 'mb-3' }
    = f.input :is_suspended, wrapper_html: { class: 'mb-3' }

  .card-footer.d-flex
    %button.btn.btn-primary{ type: 'submit' }
      Save
    = link_to 'Back', users_path, class: 'btn btn-link ms-auto'
