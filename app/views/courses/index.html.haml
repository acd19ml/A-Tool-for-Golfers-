%br
- if can? :create, Course
  = link_to 'New Course', new_course_path , class: 'btn btn-outline-secondary ms-auto'

%table.table.table-striped
  %thead 
    %tr 
      %th Course

  %tbody
    - $courses.each do |course|
      %tr 
        %td= course.name
        %td
          .ms-auto.float-end
            = link_to 'show', course_holes_path(course), class: 'btn btn-outline-secondary ms-auto'
            - if can? :update, course
              = link_to 'edit', edit_course_path(course), class: 'btn btn-outline-secondary ms-auto'
            - if can? :destroy, course
              = link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger ms-1 btn-sm'