.row.justify-content-center
  -# left container
  .col-lg-7
    .card
      .card-body
        .h3.text-center
          Course Info

        -# info
        %dl.row.mb-0
          %dt.col-md-3 CID:
          %dd.col-md-9= @course.id
          %dt.col-md-3 Name:
          %dd.col-md-9= @course.name
          %dt.col-md-3 Description:
          %dd.col-md-9= @course.path
          %dt.col-md-3 Hole:
          %dd.col-md-9= "Hole #{@hole.id}"
        = image_pack_tag @course.path, class: 'img-fluid'
  -# right container
  .col-lg-5
    .card
      .card-body
        .h3.text-center
          Selected Location
        -# table
        .row
          %table.table.table-bordered.table-striped
            %thead
              %tr.table-dark.fw-bold
                %th
                  Terrain
                %th
                  Distance(yards)
                %th
                  Baseline Strokes
            %tbody
              %tr
                %th
                  data1
                %th
                  data2
                %th
                  data3
        -# note
        .row
          .form-group.text-center
            %label
              Note:
            %textarea.form-control{:rows => "5"}= @hole.note

        -# checkbox
        .row.text-center.fw-bold
          .div
            %input{type: "checkbox"}
              View baselines?

        -# button
        .row
          .ms-auto.float-end
            -# TODO:change path, e.g. edit_course_path(course)
            = link_to 'create', edit_course_path, class: 'btn btn-outline-primary ms-auto'
            = link_to 'edit', edit_course_path, class: 'btn btn-outline-primary ms-auto'
        .row
        .card-footer.d-flex
          = link_to 'Back', courses_path, class: 'btn btn-outline-secondary ms-auto'
