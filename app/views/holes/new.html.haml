= simple_form_for([$course, @hole], url: course_holes_path($course), method: :post) do |f|
  .card-body 
    = f.input :holeNumber, wrapper_html: { class: 'mb-3' }
    = f.input :map, wrapper_html: { class: 'mb-3' }
    = f.input :note, wrapper_html: { class: 'mb-3' }
    = f.input :course_id, wrapper_html: { class: 'mb-3' }, input_html: { value: $course.id }

  .card-footer.d-flex
    %button.btn.btn-primary{ type: 'submit' }
      Save
    = link_to 'Back', course_holes_path, class: 'btn btn-link ms-auto'